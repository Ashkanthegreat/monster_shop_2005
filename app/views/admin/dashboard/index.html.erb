<h1>Dashboard</h1>

<section class="packaged">
  <h3>Packaged Orders</h3>
  <% @orders.packaged.each do |order| %>
    <span>Order ID: <%= order.id %></span>
    <span>Placed By: <%= link_to "#{order.user.name}", "/admin/profile/#{order.user.id}" %></span>
    <span>Date Created: <%= order.created_at %></span>
  <% end %>
</section>

