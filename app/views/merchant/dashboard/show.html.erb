<h1>Merchant Dashboard</h1>

<section id="merchant-info">
  <h2>Merchant Details</h2>
  <p>
    Name: <%= @merchant.name %><br/>
    Address: <%= @merchant.address %>, <%= @merchant.city %>, <%= @merchant.state %> <%= @merchant.zip %>
  </p>
</section><br><br>

<section class="orders">
  <h2>Pending Orders:</h2>
  <% @merchant.pending_orders.each do |order| %>
    <span>Order ID: <%= link_to "#{order.id}", "/merchant/orders/#{order.id}" %></span>
    <span>Date Created: <%= order.created_at %></span>
    <span>Number of items in this order: <%= order.total_items(@merchant) %></span>
    <!-- <span>Total Value: %= number_to_currency(order.total_sum) %</span> -->
  <% end %>
</section>
